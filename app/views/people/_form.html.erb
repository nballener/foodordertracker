<%= form_with(model: person, local: true, class: "form-horizontal") do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% person.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless request.GET.empty? %>
    <div class="field">
      <%= form.hidden_field :sitting_id, id: :person_sitting_id, value: request.GET[:person][:sitting_id] %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :person_name %>
  </div>

  <div class="field">
    <%= form.label :order_amount %>
    <%= form.text_field :order_amount, id: :person_order_amount %>
  </div>

  <div class="field">
    <%= form.label :paid_amount %>
    <%= form.text_field :paid_amount, id: :person_paid_amount %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-success btn-block"  %>
  </div>
<% end %>
